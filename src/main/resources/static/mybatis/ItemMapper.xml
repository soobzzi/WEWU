<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ItemMapper">
 	
 	
	<resultMap id="itemSelectMap" type="item">
      <result property="itemNo"          				column="item_no"          					jdbcType="INT" />
      <result property="itemCategory"          			column="item_category"          			jdbcType="VARCHAR" />
      <result property="itemName"   					column="item_name"    						jdbcType="VARCHAR" />
      <result property="itemEffect"   					column="item_effect"       					jdbcType="VARCHAR" /> 
      <result property="itemImg" 						column="item_img" 							jdbcType="VARCHAR" />
      <result property="itemPrice"             			column="item_price"       					jdbcType="INT" />
      <result property="itemRegdate"    				column="item_regdate"       				jdbcType="DATE" />
   </resultMap>
	
	<!-- SQL : INSERT --> 
	<insert id="addItem" parameterType="item" >
	 	INSERT
		INTO item ( item_no , item_category , item_name, item_effect , item_img, item_price, item_regdate ) 
		VALUES(	#{itemNo:INT}, #{itemCategory:VARCHAR}, #{itemName:VARCHAR}, #{itemEffect:VARCHAR}, #{itemImg:VARCHAR}, #{itemPrice:INT}, #{itemRegdate:DATE})
	</insert>
	
    <!-- SQL : SELECT -->
	<select id="getItem" parameterType="int" resultMap="itemSelectMap">
		SELECT
		item_no , item_category , item_name, item_effect , item_img, item_price
		FROM item
		WHERE item_no = #{value}
	</select>
	
	<!-- SQL : SELECT -->
	<select id="getItemList" parameterType="int" resultMap="itemSelectMap">
		SELECT
		item_no , item_category , item_name, item_img, item_price
		FROM item
		WHERE item_no = #{value}
	</select>
	
	<!-- SQL : UPDATE -->
	<update id="updateItem" parameterType="item">
		UPDATE item
		<set>
			<if test="itemNo != null"> item_no = #{itemNo} , </if>
			<if test="itemCategory != null"> item_category = #{itemCategory} , </if>
			<if test="itemName != null"> item_name = #{itemName} , </if>
			<if test="itemEffect != null"> item_effect = #{itemEffect} , </if>
			<if test="itemImg != null"> item_img = #{itemImg} , </if>
			<if test="itemPrice != null"> item_price = #{itemPrice} , </if>
			<if test="itemRegdate != null"> item_regdate = #{itemRegdate} , </if>
		</set>
		WHERE item_no = #{itemNo}
	</update>
	
	<!-- SQL : DELETE -->
	 <delete	id="deleteItem" 	parameterType="int" >
	 	DELETE 
		FROM item 
		WHERE item_no = #{value}
	 </delete>
		
	<!-- SQL : SELECT LIST -->
	<select  id="getItemSearch"  parameterType="search"	resultMap="itemSelectMap">
	  	SELECT *
	  	FROM (	SELECT inner_table.* , ROWNUM AS row_seq
	  					FROM		(	SELECT *
											FROM item
											<if test="searchCondition != null">
												<where>
													<if test="searchCondition == 0 and searchKeyword !='' ">
										 				item_name LIKE '%'||#{searchKeyword}||'%'
													</if>
													<if test="searchCondition == 1 and searchKeyword !='' ">
										 				item_category LIKE '%'||#{searchKeyword}||'%'
													</if>
												</where>
											</if>
											ORDER BY item_category ) inner_table
						WHERE ROWNUM &lt;= #{endRowNum} )
		WHERE row_seq BETWEEN #{startRowNum} AND #{endRowNum} 
	 </select>
	 	<!--  위 두번째 subQuery 의  
	 			WHERE ROWNUM &lt;= #{endRowNum} ) 는
	 			WHERE ROWNUM <= #{endRowNum} ) 의미이며..
	 			< 는 keyword 로 &lt; 를	사용.
	 			
	 			<![CDATA[  ~~~  ]]> 를 이용하여 아래와 같이 사용  할 수 있다.
	 			CDATA ==> Character Data 의 의미 Java 에서 \n 같은 특수문자 처리  

				WHERE ROWNUM <![CDATA[ <=]]> #{endRowNum} )
		-->
	
	
	<!-- SQL : SELECT ROW Count -->	 
	 <select  id="getTotalCount"  parameterType="search"	 resultType="int">
	  	SELECT COUNT(*)
	  	FROM(	SELECT prod_no , prod_name , prod_detail
						FROM product
						<if test="searchCondition != null">
							<where>
								<if test="searchCondition == 0 and searchKeyword !='' ">
					 			prod_no LIKE '%'||#{searchKeyword}||'%'
								</if>
								<if test="searchCondition == 1 and searchKeyword !='' ">
						 		prod_name LIKE '%'||#{searchKeyword}||'%'
								</if>
								<if test="searchCondition == 2 and searchKeyword !='' ">
				 				price = #{searchKeyword}
								</if>
							</where>
						</if> ) countTable						
	 </select>	
		
		
		
</mapper>